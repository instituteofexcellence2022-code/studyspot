{
  "name": "studyspot-backend",
  "version": "1.0.0",
  "description": "StudySpot SaaS Platform - Backend Services",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:auth": "node dist/services/auth-service/index.js",
    "start:student": "node dist/services/student-service/index.js",
    "start:library": "node dist/services/library-service/index.js",
    "start:booking": "node dist/services/booking-service/index.js",
    "start:payment": "node dist/services/payment-service/index.js",
    "start:api-gateway": "node dist/services/api-gateway/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "migrate": "node scripts/run-migrations.js",
    "migrate:multi-tenant": "node scripts/run-migrations.js",
    "migrate:tenant": "node scripts/run-tenant-migration.js"
  },
  "keywords": [
    "saas",
    "library-management",
    "multi-tenant",
    "fastify",
    "typescript"
  ],
  "author": "StudySpot India Pvt. Ltd.",
  "license": "PROPRIETARY",
  "dependencies": {
    "@fastify/compress": "^6.4.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.3",
    "@fastify/multipart": "^8.0.0",
    "@fastify/rate-limit": "^9.1.0",
    "@supabase/supabase-js": "^2.39.0",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.6.1",
    "fastify": "^4.24.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "razorpay": "^2.9.2",
    "redis": "^4.6.12",
    "socket.io": "^4.7.2",
    "winston": "^3.18.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
