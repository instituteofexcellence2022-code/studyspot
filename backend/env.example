# ============================================
# STUDYSPOT BACKEND - ENVIRONMENT VARIABLES
# ============================================

# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# ============================================
# DATABASE CONFIGURATION
# ============================================

# Core Database (Platform-level data)
CORE_DB_HOST=localhost
CORE_DB_PORT=5432
CORE_DB_NAME=studyspot_core
CORE_DB_USER=postgres
CORE_DB_PASSWORD=your_password_here
CORE_DB_SSL=false
CORE_DB_POOL_MIN=2
CORE_DB_POOL_MAX=10

# ============================================
# REDIS CONFIGURATION
# ============================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# ============================================
# JWT CONFIGURATION
# ============================================

JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# ============================================
# CASHFREE PAYMENT GATEWAY
# ============================================

# Sandbox (Testing)
CASHFREE_SANDBOX_APP_ID=your_sandbox_app_id
CASHFREE_SANDBOX_SECRET_KEY=your_sandbox_secret_key

# Production
CASHFREE_APP_ID=your_production_app_id
CASHFREE_SECRET_KEY=your_production_secret_key

# ============================================
# RAZORPAY PAYMENT GATEWAY
# ============================================

# Test (Testing)
RAZORPAY_TEST_KEY_ID=rzp_test_xxxxx
RAZORPAY_TEST_KEY_SECRET=your_test_secret

# Live (Production)
RAZORPAY_KEY_ID=rzp_live_xxxxx
RAZORPAY_KEY_SECRET=your_live_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# ============================================
# SMS CONFIGURATION (MSG91)
# ============================================

MSG91_AUTH_KEY=your_msg91_auth_key
MSG91_SENDER_ID=STDYSP
MSG91_ROUTE=4

# ============================================
# BSNL DLT CONFIGURATION
# ============================================

DLT_ENTITY_ID=your_entity_id
DLT_TEMPLATE_OTP_ID=1234567890123456789
DLT_TEMPLATE_WELCOME_ID=1234567890123456790
DLT_TEMPLATE_PAYMENT_SUCCESS_ID=1234567890123456791
DLT_TEMPLATE_PAYMENT_REMINDER_ID=1234567890123456792
DLT_TEMPLATE_BOOKING_ID=1234567890123456793
DLT_TEMPLATE_EXPIRY_ID=1234567890123456794

# ============================================
# EMAIL CONFIGURATION
# ============================================

EMAIL_PROVIDER=resend
RESEND_API_KEY=your_resend_api_key
EMAIL_FROM=noreply@studyspot.com
EMAIL_FROM_NAME=StudySpot

# ============================================
# FILE STORAGE (Cloudflare R2)
# ============================================

R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_BUCKET_NAME=studyspot-storage
R2_PUBLIC_URL=https://storage.studyspot.com

# ============================================
# LOGGING & MONITORING
# ============================================

BETTERSTACK_SOURCE_TOKEN=your_source_token
SENTRY_DSN=your_sentry_dsn

# ============================================
# SECURITY
# ============================================

ENCRYPTION_KEY=your_32_character_encryption_key
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1m
CORS_ORIGIN=http://localhost:3002,https://admin.studyspot.com

# ============================================
# MICROSERVICES PORTS
# ============================================

API_GATEWAY_PORT=3000
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
TENANT_SERVICE_PORT=3003
STUDENT_SERVICE_PORT=3004

