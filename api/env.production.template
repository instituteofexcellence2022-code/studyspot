# ============================================
# STUDYSPOT PRODUCTION ENVIRONMENT VARIABLES
# ============================================

# ========== BASIC SETUP ==========
NODE_ENV=production
PORT=3000

# ========== DATABASE (Neon.tech Primary) ==========
DATABASE_URL=postgresql://user:password@ep-xxx-xxx.region.aws.neon.tech/studyspot?sslmode=require

# Database Replicas (Optional)
# PLANETSCALE_URL=mysql://user:password@host:3306/database
# SUPABASE_DB_URL=postgresql://postgres:password@db.xxx.supabase.co:5432/postgres

# ========== REDIS CACHING ==========
# Primary Redis (Railway)
REDIS_URL=redis://default:password@containers-us-west-xxx.railway.app:6379

# Backup Redis (Upstash)
UPSTASH_REDIS_URL=redis://default:password@xxx.upstash.io:6379

# ========== JWT AUTHENTICATION ==========
JWT_SECRET=CHANGE_THIS_TO_RANDOM_32_CHAR_STRING
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=CHANGE_THIS_TO_RANDOM_32_CHAR_STRING
JWT_REFRESH_EXPIRES_IN=7d

# ========== CORS CONFIGURATION ==========
# Add all your frontend URLs (comma-separated)
CORS_ORIGIN=https://studyspot-student.vercel.app,https://studyspot-owner.vercel.app,https://studyspot-admin.vercel.app,https://yourdomain.com

# ========== EMAIL PROVIDERS (Multi-Provider) ==========
# Primary Email Provider (choose one)
EMAIL_PROVIDER=resend

# Resend (3,000 emails/month free)
RESEND_API_KEY=re_xxx

# SendGrid (100 emails/day free)
SENDGRID_API_KEY=SG.xxx

# Mailgun (5,000 emails/month free)
MAILGUN_API_KEY=xxx
MAILGUN_DOMAIN=studyspot.com

# Brevo (300 emails/day free)
BREVO_API_KEY=xxx

# Postmark (100 emails/month free)
POSTMARK_API_KEY=xxx

# Amazon SES (62,000 emails/month free)
AWS_ACCESS_KEY_ID=xxx
AWS_SECRET_ACCESS_KEY=xxx
AWS_REGION=us-east-1

# Mailtrap (500 emails/month free)
MAILTRAP_API_TOKEN=xxx

# FROM Email
FROM_EMAIL=noreply@studyspot.com
FROM_NAME=StudySpot

# ========== SMS / WHATSAPP OTP ==========
# Twilio (WhatsApp OTP - Sandbox)
TWILIO_ACCOUNT_SID=ACxxx
TWILIO_AUTH_TOKEN=xxx
TWILIO_PHONE_NUMBER=+14155238886

# WhatsApp Business API (Optional)
WHATSAPP_ACCESS_TOKEN=xxx
WHATSAPP_PHONE_NUMBER_ID=xxx

# ========== PAYMENT GATEWAYS ==========
# Razorpay
RAZORPAY_KEY_ID=rzp_xxx
RAZORPAY_KEY_SECRET=xxx
RAZORPAY_WEBHOOK_SECRET=xxx

# Stripe (Optional)
STRIPE_PUBLISHABLE_KEY=pk_xxx
STRIPE_SECRET_KEY=sk_xxx

# ========== FILE STORAGE ==========
# Cloudinary (Images - 25GB free)
CLOUDINARY_CLOUD_NAME=xxx
CLOUDINARY_API_KEY=xxx
CLOUDINARY_API_SECRET=xxx

# Backblaze B2 (Documents - 10GB free)
BACKBLAZE_KEY_ID=xxx
BACKBLAZE_APPLICATION_KEY=xxx
BACKBLAZE_BUCKET=studyspot-docs
BACKBLAZE_ENDPOINT=https://s3.us-west-xxx.backblazeb2.com

# AWS S3 (Optional - 5GB free)
AWS_REGION=us-east-1
S3_BUCKET=studyspot-files

# ========== AUTHENTICATION (Supabase) ==========
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_ANON_KEY=xxx
SUPABASE_SERVICE_KEY=xxx

# ========== OAUTH PROVIDERS ==========
# Google OAuth
GOOGLE_CLIENT_ID=xxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=xxx

# Facebook OAuth
FACEBOOK_APP_ID=xxx
FACEBOOK_APP_SECRET=xxx

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=xxx
LINKEDIN_CLIENT_SECRET=xxx

# ========== GOOGLE MAPS ==========
GOOGLE_MAPS_API_KEY=AIzaSyxxx

# ========== MONITORING & ANALYTICS ==========
# Sentry (Error Tracking)
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_ENVIRONMENT=production

# PostHog (Analytics)
POSTHOG_API_KEY=xxx
POSTHOG_HOST=https://app.posthog.com

# UptimeRobot (via API - Optional)
UPTIMEROBOT_API_KEY=xxx

# Prometheus (Metrics)
PROMETHEUS_PORT=9090

# ========== SECURITY ==========
BCRYPT_ROUNDS=12
SESSION_SECRET=CHANGE_THIS_TO_RANDOM_32_CHAR_STRING

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========== LOGGING ==========
LOG_LEVEL=info
LOG_FORMAT=json

# ========== API CONFIGURATION ==========
API_VERSION=v1
API_PREFIX=/api

# ========== FEATURE FLAGS ==========
ENABLE_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_SMS_VERIFICATION=true

# ========== FILE UPLOAD ==========
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ========== DEVELOPMENT ==========
ENABLE_SWAGGER=false
ENABLE_DEBUG_LOGS=false

