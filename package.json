{
  "name": "studyspot-platform",
  "version": "1.0.0",
  "description": "ðŸŽ“ STUDYSPOT - Multi-tenant SaaS platform connecting students with study spaces",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:owner\" \"npm run dev:admin\"",
    "dev:api": "cd api && npm run dev",
    "dev:owner": "cd web-owner && npm start",
    "dev:admin": "cd web-admin && npm start",
    "dev:mobile": "cd mobile && npm start",
    "start:api": "cd api && npm start",
    "start:owner": "cd web-owner && npm start",
    "start:admin": "cd web-admin && npm start",
    "start:mobile": "cd mobile && npm start",
    "build": "npm run build:api && npm run build:owner && npm run build:admin",
    "build:api": "cd api && npm run build",
    "build:owner": "cd web-owner && npm run build",
    "build:admin": "cd web-admin && npm run build",
    "test": "npm run test:api && npm run test:owner && npm run test:admin",
    "test:api": "cd api && npm test",
    "test:owner": "cd web-owner && npm test",
    "test:admin": "cd web-admin && npm test",
    "lint": "npm run lint:api && npm run lint:owner && npm run lint:admin",
    "lint:api": "cd api && npm run lint",
    "lint:owner": "cd web-owner && npm run lint",
    "lint:admin": "cd web-admin && npm run lint",
    "install:all": "npm install && cd api && npm install && cd ../web-owner && npm install && cd ../web-admin && npm install && cd ../mobile && npm install",
    "migrate": "cd api && npm run migrate",
    "seed": "cd api && npm run seed",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "studyspot",
    "library",
    "booking",
    "saas",
    "multi-tenant",
    "education",
    "study-spaces"
  ],
  "author": "StudySpot Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/studyspot/platform.git"
  },
  "bugs": {
    "url": "https://github.com/studyspot/platform/issues"
  },
  "homepage": "https://studyspot.com"
}

