# API Gateway Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,https://studyspot.com,https://admin.studyspot.com,https://owner.studyspot.com

# Service URLs (Microservices)
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
BOOKING_SERVICE_URL=http://localhost:3003
PAYMENT_SERVICE_URL=http://localhost:3004
CRM_SERVICE_URL=http://localhost:3005
COMMUNICATION_SERVICE_URL=http://localhost:3006
ML_SERVICE_URL=http://localhost:3007
ANALYTICS_SERVICE_URL=http://localhost:3008
AI_SERVICE_URL=http://localhost:3009
SECURITY_SERVICE_URL=http://localhost:3010
FACE_RECOGNITION_SERVICE_URL=http://localhost:3011
QR_SERVICE_URL=http://localhost:3012
AUTOMATION_SERVICE_URL=http://localhost:3013
DATA_MINING_SERVICE_URL=http://localhost:3014
NOTIFICATION_SERVICE_URL=http://localhost:3015
SUBSCRIPTION_SERVICE_URL=http://localhost:3016
MONITORING_SERVICE_URL=http://localhost:3017

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# Slow Down Configuration
SLOW_DOWN_WINDOW_MS=900000
SLOW_DOWN_DELAY_AFTER=100
SLOW_DOWN_DELAY_MS=500

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ERROR=logs/error.log
LOG_FILE_COMBINED=logs/combined.log

# Security Configuration
HELMET_ENABLED=true
CORS_ENABLED=true
COMPRESSION_ENABLED=true

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30000
SERVICE_HEALTH_CHECK_TIMEOUT=5000

# Development Configuration
DEBUG_MODE=true
VERBOSE_LOGGING=true
